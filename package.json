{
	"name": "@zwidekalanga/svelte-logviewer",
	"version": "0.1.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && yarn package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "yarn package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test:unit": "vitest tests/unit",
		"test:unit:shard": "vitest tests/unit --shard",
		"test:package": "yarn package && vitest run tests/package-integration",
		"test": "yarn test:unit --run && yarn test:e2e && yarn test:package",
		"test:e2e": "playwright test tests/e2e",
		"test:e2e:coverage": "mkdir -p coverage/e2e-coverage && playwright test tests/e2e --project=chromium && node convert-coverage.js",
		"test:e2e:report": "npx monocart show-report ./coverage",
		"merge-coverage": "node merge-coverage.js",
		"test:coverage": "yarn test:unit --coverage && yarn test:e2e:coverage && yarn merge-coverage",
		"nyc:coverage": "nyc --nycrc-path=.nycrc.json yarn test:unit",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "yarn build && changeset publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./dist/*": {
			"types": "./dist/*.d.ts",
			"svelte": "./dist/*.js",
			"default": "./dist/*.js"
		},
		"./package.json": "./package.json"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@chromatic-com/storybook": "^3.2.3",
		"@eslint/compat": "^1.2.3",
		"@eslint/js": "^9.17.0",
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@playwright/test": "^1.45.3",
		"@storybook/addon-essentials": "^8.4.7",
		"@storybook/addon-interactions": "^8.4.7",
		"@storybook/addon-svelte-csf": "^5.0.0-next.21",
		"@storybook/blocks": "^8.4.7",
		"@storybook/core": "^8.6.12",
		"@storybook/svelte": "^8.4.7",
		"@storybook/sveltekit": "^8.4.7",
		"@storybook/test": "^8.4.7",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/svelte": "^5.2.7",
		"@types/node": "^22.14.0",
		"@types/react": "^18.0.0",
		"@vitest/coverage-v8": "2.1.9",
		"autoprefixer": "^10.4.20",
		"esbuild": "0.21.5",
		"esbuild-register": "^3.6.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"istanbul-lib-coverage": "^3.2.2",
		"istanbul-lib-report": "^3.0.1",
		"istanbul-reports": "^3.1.6",
		"jsdom": "^26.0.0",
		"monocart-coverage-reports": "^2.12.4",
		"monocart-reporter": "^2.9.17",
		"nyc": "^17.1.0",
		"picomatch": "3.0.1",
		"postcss": "^8.4.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"publint": "^0.2.0",
		"storybook": "^8.4.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"v8-to-istanbul": "^9.3.0",
		"vite": "^5.4.11",
		"vitest": "2.1.9"
	},
	"dependencies": {
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.15",
		"immutable": "^5.0.3",
		"mitt": "^3.0.1",
		"virtua": "^0.39.3"
	}
}
